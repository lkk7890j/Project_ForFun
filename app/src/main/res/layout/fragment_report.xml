<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin.Report_page.ReportFragment">

    <!-- TODO: Update blank fragment layout -->


    <Spinner
        android:id="@+id/report_page_spinner"
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/spinner"
        android:entries="@array/ReportFragment_Spinner"
        android:foreground="@drawable/shap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView46" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="140dp"
        android:background="#FFFFFF"
        android:text="詳細內容："
        android:textColor="#000000"
        android:textSize="18dp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/textView46"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/report_page_ed_Detailed_status"
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView43"
        app:layout_constraintTop_toTopOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:text="檢舉類別："
        android:textColor="#000000"
        android:textSize="18dp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/report_page_spinner"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/report_page_bt_confirm"
        android:background="@drawable/bt_14050blank"
        android:src="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:textColor="#040404"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/report_page_bt_confirm"
        app:layout_constraintEnd_toEndOf="@+id/report_page_bt_confirm"
        app:layout_constraintStart_toStartOf="@+id/report_page_bt_confirm"
        app:layout_constraintTop_toTopOf="@+id/report_page_bt_confirm" />

    <ImageButton
        android:id="@+id/report_page_bt_cancel"
        android:background="@drawable/bt_14050blank"
        android:src="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#0A0A0A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/report_page_bt_cancel"
        app:layout_constraintEnd_toEndOf="@+id/report_page_bt_cancel"
        app:layout_constraintStart_toStartOf="@+id/report_page_bt_cancel"
        app:layout_constraintTop_toTopOf="@+id/report_page_bt_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>