<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment.AppointmentFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="48dp"
            android:paddingTop="48dp"
            android:paddingRight="48dp">

            <ImageView
                android:id="@+id/imgAppointmentTitle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/uploadpicture" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/textAppointmentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="刊登標題"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="32dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="預約日期(必填)"
                    app:boxBackgroundColor="@color/cardview_shadow_end_color"
                    app:hintTextColor="?android:attr/textColorHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editAppointmentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imgAppointmentDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:src="@drawable/icon_date" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="32dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="預約時間(必填)"
                    app:boxBackgroundColor="@color/cardview_shadow_end_color"
                    app:hintTextColor="?android:attr/textColorHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editAppointmentTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imgAppointmentTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:src="@drawable/icon_date" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAppointmentCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bt_14050blank"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="取消預約"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:backgroundTint="?android:attr/panelBackground"
                    app:backgroundTintMode="add" />

                <Button
                    android:id="@+id/btnAppointmentClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bt_14050blank"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="預約"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    app:backgroundTint="?android:attr/panelBackground"
                    app:backgroundTintMode="add" />

                <Button
                    android:id="@+id/btnAppointmentConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bt_14050blank"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="確認預約"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:backgroundTint="?android:attr/panelBackground"
                    app:backgroundTintMode="add" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>