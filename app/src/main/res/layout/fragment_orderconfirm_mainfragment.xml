<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".orderconfirm.Orderconfirm_mainfragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/orderconfirm_main_tabs"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@color/main_color"
        app:tabIndicatorColor="@color/bottom_choose"
        app:tabMode="scrollable"
        app:tabRippleColor="@color/main_color"
        app:tabSelectedTextColor="@color/bottom_choose">

    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_color">

        <Switch
            android:id="@+id/simpleSwitch_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:checked="true"
            android:text="房客"
            android:textOff="No"
            android:textOn="Yes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- text to be displayed whenever current state is checked-->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/orderconfirm_main_viewpage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.viewpager2.widget.ViewPager2>

</LinearLayout>